<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Splashscreen">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/ivsplashlogo"
            android:src="@drawable/applogo"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOODICTED"
            android:textSize="40sp"
            android:textColor="#FF0057"
            android:textStyle="bold"
            android:id="@+id/tvsplashtittle"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerVertical="true"
            android:layout_marginStart="155dp"
            android:paddingLeft="3sp"
            />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Calories Don't Count Here..!!"
    android:textSize="11sp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:id="@+id/tvsplashslogan"
    android:fontFamily="sans-serif-medium"
    android:layout_below="@id/tvsplashtittle"
    android:layout_marginStart="160dp"

    />











</RelativeLayout>